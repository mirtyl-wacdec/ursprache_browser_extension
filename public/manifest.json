{
  "name": "Urtweet link translator",
  "description": "Extension to automatically open Twitter links on urtweet",
  "manifest_version": 2,
  "version": "0.2.0",
  "permissions": ["storage", "webRequest", "webRequestBlocking", "*://*.twitter.com/*"],
  "icons": {
    "16": "crow16.png",
    "48": "crow48.png",
    "128": "crow128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "crow16.png",
      "48": "crow48.png",
      "128": "crow128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": []
}